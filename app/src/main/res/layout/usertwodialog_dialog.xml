<?xml version="1.0" encoding="utf-8"?>
<!--用户自己登录 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog"
        android:orientation="vertical">

        <ImageView

            android:background="#ffffff"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="123dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/denglu9" />

        <TextView
            android:background="@color/result_text"
            android:id="@+id/userdialog_title_tv_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="严禁进入冷轧厂作业"
            android:textColor="#333333"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="#E5E5E5"></View>
        <ListView
            android:layout_marginHorizontal="@dimen/dp_10"
            android:background="@color/result_text"
            android:id="@+id/listview_face_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

        <LinearLayout
            android:background="@color/result_text"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"></View>
            <LinearLayout
                android:background="@color/result_text"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@color/result_text"
                    android:id="@+id/tv_entrance_main_detect"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:layout_marginVertical="18dp"
                    android:gravity="center"
                    android:text="知道了"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E5E5E5" />
                <TextView
                    android:background="@color/result_text"
                    android:id="@+id/tv_particular_detect"
                    android:textSize="15sp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:text="查看我的诚信信息"
                    android:layout_marginVertical="18dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>