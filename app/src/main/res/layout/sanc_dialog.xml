<?xml version="1.0" encoding="utf-8"?>
<!--他人扫描，成功显示此弹窗 自己人脸识别，成功直接跳转首页  -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginHorizontal="45dp"
        android:layout_width="295dp"
        android:layout_height="287dp"
        android:background="@drawable/dialog"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="请选择您要扫描的类型"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/sanc_ll_code"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/scan_dialog"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:src="@mipmap/shaoyishao3"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#ffffff"
                    android:text="二维码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/sanc_ll_face"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/face_dialog"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:src="@mipmap/shaoyishao2"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#ffffff"
                android:text="人脸识别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/sanc_ll_close"
            android:textColor="#CCCCCC"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_40"
            android:text="关闭"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>