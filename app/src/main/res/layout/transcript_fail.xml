<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#333333"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.xsylsb.integrity.view.StatusBarHeightView
        use_type="use_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.Toolbar
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_return_examination"
            android:src="@mipmap/denglu7"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
            <TextView
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="考试成绩 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/zaixiankaosi6"
            android:layout_width="335dp"
            android:layout_height="532dp">
            <View
                android:layout_weight="2.8"
                android:layout_width="match_parent"
                android:layout_height="0dp"></View>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="#333333"
                android:textSize="17sp"
                android:gravity="center"
                android:text="柳钢·安全技术交底培训试题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="13dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="2019.06.15  14:40:32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/zaixiankaosi7"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:layout_width="109dp"
                    android:layout_height="109dp" />
                <TextView
                    android:layout_marginTop="40dp"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="很遗憾你未通过本次考试，本次成绩\n记录可在“个人-我的培训”中查看"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_tran_ok"
                    android:textColor="#FFFFFF"
                    android:text="知道了"
                    android:textSize="15sp"
                    android:background="@drawable/login"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>